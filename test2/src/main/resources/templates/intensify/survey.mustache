{{>layouts/header}}

<style>
    .flex {
        display: flex; /* 플렉스 컨테이너 */
        gap: 20px; /* 아이템 간격 */
        flex-wrap: wrap; /* 아이템 줄바꿈 */
        justify-content: center; /* 중앙 정렬 */
    }

    .food-item {
        width: 200px; /* 각 아이템의 너비 */
        text-align: center; /* 텍스트 가운데 정렬 */
    }

    .food-item img {
        width: 100%; /* 이미지의 너비 */
        border-radius: 8px; /* 이미지 테두리 둥글게 */
    }

    .range-slider {
        width: 100%; /* 슬라이더의 너비 */
        margin-top: 10px; /* 슬라이더 위 여백 */



</style>

<section id="koreaFoods" class="wrapper style1 special">
    <div class="inner flex flex-3">
        <!-- 한식 선택 -->
        {{#koreaFoods}}
            <div class="food-item">
                <img src="https://via.placeholder.com/200" alt="음식 이미지 1">
                <h3>{{name}}</h3>
                <!--            <input type="range" min="0" max="10" value="5" class="range-slider">-->
                <input type="range" min="0" max="10" value="5" class="range-slider" name="{{name}}">

            </div>
        {{/koreaFoods}}
</section>


