{{>layouts/header}}

<style>
    .flex {
        display: flex; /* 플렉스 컨테이너 */
        gap: 20px; /* 아이템 간격 */
        overflow-x: hidden;
        white-space: nowrap;
        padding: 10px;
    }
    @media screen and (max-width: 980px) {
            .flex {
            display: flex; /* 플렉스 컨테이너 */
            gap: 20px; /* 아이템 간격 */
            overflow-x: auto;
            white-space: nowrap;
            padding: 10px;
            webkit-flex-wrap: unset;
            flex-wrap: unset;
        }
    }

    .food-item {
        min-width: 300px;
        text-align: center;
        margin-bottom: 2em;
        display: inline-block;
    }

    .scroll-button {
        background-color: #000000;
        color: white;
        border: none;
        padding: 1px 20px;
        cursor: pointer;
        margin: 5px;
        font-family: "NanumSquareNeoH", sans-serif;
        font-size: larger;
    }

    .wrapper{
        text-align: center;
    }

</style>


<form method="post" action="/survey/submit">

    <section id="Western" class="wrapper style1 special">
        <div class="inner flex flex-3 foodContainer">
            {{#Western}}
                <div class="food-item">
                    <img src="/images/foods/{{food_id}}.png" alt="{{name}}" loading="lazy">
                    <h3 class="nameTag">{{name}}</h3>
                    <!--            <input type="range" min="0" max="10" value="5" class="range-slider">-->
                    <input type="range" min="0" max="10" class="range-slider"
                           value={{preference}}
                           name="{{food_id}}">

                </div>
            {{/Western}}
        </div>
        <button class="scroll-button" type="button" onclick="scrollLeftCustom('Western')"><</button>
