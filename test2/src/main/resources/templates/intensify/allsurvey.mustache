{{>layouts/header}}

<style>
    .flex {
        display: flex; /* 플렉스 컨테이너 */
        gap: 20px; /* 아이템 간격 */
        flex-wrap: wrap; /* 아이템 줄바꿈 */
        justify-content: center; /* 중앙 정렬 */
    }

</style>


<form method="post" action="/survey/submit">

    <section class="wrapper style1 special">
        <div class="inner flex flex-3">
            {{#allfoods}}
                <div class="food-item">
                    <img src="/images/foods/{{food_id}}.png" alt="{{name}}">
                    <h3 class="nameTag">{{name}}</h3>
                    <!--            <input type="range" min="0" max="10" value="5" class="range-slider">-->
                    <input type="range" min="0" max="10" class="range-slider"
                           value={{preference}}
                           name="{{food_id}}">

                </div>
            {{/allfoods}}
        </div>
    </section>

    <section id="Night" class="wrapper">
        <div class="inner flex flex-3">
            <button class="submit-button" type="submit">저장</button>
        </div>
    </section>

{{>layouts/footer}}