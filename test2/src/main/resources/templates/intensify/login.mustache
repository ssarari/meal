{{>layouts/header}}

<section id="one" class="wrapper">
    <div class="inner flex flex-3" style="display: flex;
        flex-direction: column;
        align-items: center;">
        <header class="align-center"><h1>로그인</h1>
        </header>

        <div class="form_container" style="width:60%">
            <form method="post" action="/login" style="text-align: center;">
                <div class="12u$" style="margin-bottom:20px; max-width:300%;">
                    <input type="text" name="userId" id="userId" placeholder="아이디입력">
                </div>
                <div class="12u$" style="margin-bottom:20px; max-width:300%;">
                    <input type="text" name="password" id="password" placeholder="비밀번호입력">
                </div>

                <div class="12u$" style="max-width:300%;">
                    <ul class="actions fit">
                        <li><input type="submit" class="button fit" value="로그인"></li>
                        <li><a href="/register" class="button alt fit">회원가입</a></li>
                    </ul>
                </div>
            </form>
        </div>
    </div>
</section>

{{>layouts/footer}}